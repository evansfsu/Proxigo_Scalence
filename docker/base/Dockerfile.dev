# Proxigo Scalence - Development Base Image (x86_64)
# For Windows/Linux development without NVIDIA GPU
#
# Build: docker build -t proxigo/ros2-base:dev -f docker/base/Dockerfile.dev .

FROM ros:humble

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV ROS_DISTRO=humble
ENV LANG=C.UTF-8
ENV LC_ALL=C.UTF-8

# Install basic dependencies
RUN apt-get update && apt-get install -y \
    software-properties-common \
    curl \
    wget \
    git \
    cmake \
    build-essential \
    python3-pip \
    python3-dev \
    vim \
    nano \
    && rm -rf /var/lib/apt/lists/*

# Install ROS2 packages
RUN apt-get update && apt-get install -y \
    ros-humble-cv-bridge \
    ros-humble-image-transport \
    ros-humble-image-transport-plugins \
    ros-humble-tf2 \
    ros-humble-tf2-ros \
    ros-humble-tf2-geometry-msgs \
    ros-humble-diagnostic-updater \
    ros-humble-geographic-msgs \
    ros-humble-nav-msgs \
    ros-humble-sensor-msgs \
    ros-humble-geometry-msgs \
    ros-humble-std-msgs \
    ros-humble-visualization-msgs \
    ros-humble-rviz2 \
    python3-colcon-common-extensions \
    python3-rosdep \
    python3-vcstool \
    && rm -rf /var/lib/apt/lists/*

# Install development dependencies
RUN apt-get update && apt-get install -y \
    libboost-all-dev \
    libeigen3-dev \
    libopencv-dev \
    libyaml-cpp-dev \
    libceres-dev \
    libsuitesparse-dev \
    libgoogle-glog-dev \
    libgflags-dev \
    && rm -rf /var/lib/apt/lists/*

# Install Python packages for development
# Note: numpy<2 required for compatibility with ROS2 Humble cv_bridge
RUN pip3 install --no-cache-dir \
    "numpy<2" \
    scipy \
    opencv-contrib-python \
    pyyaml \
    transforms3d \
    pyproj \
    shapely \
    pillow \
    matplotlib

# Setup ROS2 environment
RUN echo "source /opt/ros/humble/setup.bash" >> /etc/bash.bashrc
SHELL ["/bin/bash", "-c"]

# Create workspace
WORKDIR /ros2_ws
RUN mkdir -p src

# Create entrypoint script (avoiding line ending issues)
RUN printf '#!/bin/bash\nset -e\nsource /opt/ros/humble/setup.bash\nif [ -f /ros2_ws/install/setup.bash ]; then\n    source /ros2_ws/install/setup.bash\nfi\nexec "$@"\n' > /ros2_entrypoint.sh && chmod +x /ros2_entrypoint.sh

ENTRYPOINT ["/ros2_entrypoint.sh"]
CMD ["bash"]
